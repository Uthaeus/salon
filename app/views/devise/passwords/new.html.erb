<div class='container devise-container'>
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'homer@example.com' %>
    </div>

    <hr>

    <div class="form-group d-grid col-6 mx-auto">
      <%= f.submit "Send me reset password instructions", class: 'btn form-submit' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>