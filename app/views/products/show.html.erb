<div class='product-container'>
  <div class="row mb-3">
    <div class='col-md-7 mt-5 mx-auto'>
      <%= image_tag @product.main_image %>
    </div>

    <div class='col-md-5 mt-5'>
      <h1><%= @product.title %></h1>
      <p><%= @product.description %></p>
      <hr>
      <h2 class='w-100 text-end'>$<%= @product.price %></h2>
    </div>
    
  </div>
  <hr>
  <div class="d-flex mt-5 p-2">
    <%= link_to "Back to products", products_path, class: 'btn btn-primary mx-2' %>

    <% if logged_in?(:site_admin) %>
      <%= link_to "Edit this product", edit_product_path(@product), class: 'btn btn-secondary mx-2' %> |
      <%= button_to "Destroy this product", @product, method: :delete, class: 'btn btn-danger mx-2' %>
    <% end %>
  </div>
</div>
