
<header class="py-3 mb-3 border-bottom">
    <div class="container-fluid d-grid gap-3 align-items-center" style="grid-template-columns: 2fr 1fr;">

        <div class='container d-flex justify-content-evenly align-items-center'>
            <%= image_tag "asl_logo.jpg", size: "40x30" %>
            <%= nav_helper "link px-2", 'span' %>
            
            

            <div class="dropdown d-flex nav-link px-2">

                <a class="link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Hair</a>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li><%= link_to ' All Services', services_path, class: "dropdown-item" %></li>
                    <li><a class="dropdown-item" href="/services#cut">Cuts</a></li>
                    <li><a class="dropdown-item" href="/services#color">Colors</a></li>
                    <li><a class="dropdown-item" href="/services#perm">Perm</a></li>
                    <li><a class="dropdown-item" href="/services#weave">Weave</a></li>
                    <li><a class="dropdown-item" href="/services#highlights">Highlights</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/services#brows">Eyebrows</a></li>
                    <li><a class="dropdown-item" href="/services#nails">Nails</a></li>
                    <li><a class="dropdown-item" href="/services#paraffin">Paraffin</a></li>
                    <li><a class="dropdown-item" href="/services#wax">Waxing</a></li>
                </ul>
            </div>

            <div class="dropdown d-flex nav-link px-2">

                <a class="link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Lashes</a>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li><%= link_to 'Lashes', lashes_path, class: "dropdown-item" %></li>
                    <li><a class="dropdown-item" href="/lashes#full">Full Set</a></li>
                    <li><a class="dropdown-item" href="/lashes#fill">2wk Fill</a></li>
                    <li><a class="dropdown-item" href="/lashes#fill">3wk Fill</a></li>
                    <li><a class="dropdown-item" href="/lashes#hybrid">Hybrid</a></li>
                </ul>
            </div>
        </div>

      <div class="d-flex align-items-center justify-content-end">
        <%= link_to 'Products', products_path, class: "link px-2 mx-2" %>

        <% if logged_in?(:user) %>
            <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "link px-2 mx-2 logout-btn" %>
            <%= link_to "Profile", edit_user_registration_path, class: 'nav-link px-2 mx-2' %>
        <% else %>
            <%= link_to 'Sign up', new_user_registration_path, class: "link px-2 mx-2" %>
            <%= link_to 'Log In', new_user_session_path, class: "link px-2 mx-2" %>
        <% end %>
        <%= link_to 'aslsalon@gmail.com', root_path, class: "link px-2" %>
        
      </div>
    </div>
  </header>