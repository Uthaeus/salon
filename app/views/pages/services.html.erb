
<div class="panel-container">
  <h3 class='text-center'>Services</h3>

  <div class='row'>
    <div class='col-md-6'>

      <div class="panel">
        <h4 class="price-type" id="cut">Hair</h4>
        <ul>
          <li>Men's Haircut................$10</li>
          <li>Women's Haircut.........$15</li>
          <li>w/ Style............................$20</li>
          <li>Child's Cut....................$6</li>
          <li><small>(12 and under)</small></li>
        </ul>
      </div>


      <div class="panel">
        <h4 class="price-type" id="color">Color</h4>
        <ul>
          <li>Permanent Color.......................$25<small>and up</small></li>
          <li>Semi-Permanent Color.............$20<small>and up</small></li>
        </ul>
      </div>


      <div class="panel">
        <h4 class="price-type" id='weave'>Weave</h4>
        <ul>
          <li>Full............................$60<small> and up</small></li>
          <li>Partial......................$45<small> and up</small></li>
          <li>Sunkist........................$1.50<small> per foil</small></li>
        </ul>
      </div>

      

      <div class="panel">
        <h4 class="price-type" id='highlights'>Highlights/Cap</h4>
        <ul>
          <li>Short.......................$15</li>
          <li>Medium...................$22</li>
          <li>Long.........................$30</li>
        </ul>
      </div>

      

      <div class="panel">
        <h4 class="price-type" id="perm">Perms</h4>
        <ul>
          <li>Short.......................$20<small> and up</small></li>
          <li>Medium..................$40<small> and up</small></li>
          <li>Long.......................$55<small> and up</small></li>
          <li>*Specialty wraps and additional perms $5 each</li>
        </ul>
      </div>


      <div class="panel">
        <h4 class="price-type" id="brows">Eyebrows</h4>
        <ul>
          <li>Waxing........................$8</li>
          <li>Color..............................$10</li>
          <li>Trim.............................$5</li>
        </ul>
      </div>

      

      <div class="panel">
        <h4 class="price-type" id="nails">Nails</h4>
        <ul>
          <li>Manicure......................$5</li>
          <li>Pedicure........................$8</li>
          <li>Full Set Acrylics............$25</li>
          <li>Fill.....................................$20</li>
          <li>Paint..............................$2</li>
        </ul>
      </div>

      

      <div class="panel">
        <h4 class="price-type" id='paraffin'>Paraffin Wax</h4>
        <ul>
          <li>Hands...........................$5</li>
          <li>Feet...............................$8</li>
        </ul>
      </div>


      <div class="panel">
        <h4 class="price-type" id="wax">Waxing</h4>
        <ul>  
          <li>Lip..................................$8</li>
          <li>Chin...............................$8</li>
          <li>Whole Face.....................$20</li>
          <li>Half Arm.........................$25</li>
          <li>Full Arm..........................$40</li>
          <li>Half Leg..........................$40</li>
          <li>Full Leg..........................$75</li>
          <li>Underarms.....................$18</li>
        </ul>
      </div>
    </div>

    <div class='col-md-2'></div>

    <div class='col-md-4 image-column'>

      <div class="hair-image3">
        <%= image_tag "hair3.jpeg", width: "300px" %>
      </div>

      <div class="hair-image4">
        <%= image_tag "hair5.jpeg", width: "300px" %>
      </div>


      <div class="eyebrow-image1">
        <%= image_tag "eyebrow3.jpeg", width: "200px" %>
      </div>

      <div class="nail-image1">
        <%= image_tag "nails_and_toes.jpeg", width: "300px" %>
      </div>


    </div>
  </div>
</div>
